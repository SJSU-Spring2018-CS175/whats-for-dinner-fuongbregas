<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sjsu.fuong.whatsfordinner.NewDishActivity">


    <LinearLayout
        android:id="@+id/linearLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="76dp">

        <EditText
            android:id="@+id/recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Recipe Name" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="98dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/burger" />

            <ImageButton
                android:id="@+id/addPicture"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </LinearLayout>

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item1"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:hint="Item 1"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- 2nd ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item2"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:hint="Item 2"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- 3rd ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item3"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:hint="Item 3"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- 4th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item4"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:hint="Item 4"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity4"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- 5th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item 5"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity5"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- 6th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item 6"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity6"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- 7th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item 7"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity7"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- 8th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item 8"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity8"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- 9th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item 9"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity9"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- 10th ingredient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/item10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item 10"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/quantity10"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/unit10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Unit"
                        android:singleLine="true"/>

                </LinearLayout>






            </LinearLayout>


        </ScrollView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp" />






                <EditText
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:gravity="top|left"
                    android:ems="10"
                    android:hint="Add Description"
                    android:maxLength="250" />



        <Button
            android:id="@+id/submitButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
